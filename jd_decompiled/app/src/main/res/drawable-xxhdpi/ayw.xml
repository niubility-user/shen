<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <size android:height="24dp"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#edeff2"/>
        </shape>
    </item>
    <item android:id="@android:id/progress" android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="7dp">
        <scale android:scaleWidth="100%" android:clipOrientation="horizontal">
            <shape android:shape="rectangle">
                <size android:height="10dp"/>
                <corners android:radius="5dp"/>
                <gradient android:startColor="#fff10000" android:endColor="#ffff4c16" android:angle="0"/>
            </shape>
        </scale>
    </item>
</layer-list>
