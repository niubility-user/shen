<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="#ffdcdcdc" android:endColor="#ffdcdcdc" android:angle="270" android:centerY="0.75" android:centerColor="#ffdcdcdc"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="#ff6969" android:endColor="#ff6969" android:angle="270" android:centerY="0.75" android:centerColor="#ff6969"/>
            </shape>
        </clip>
    </item>
</layer-list>
