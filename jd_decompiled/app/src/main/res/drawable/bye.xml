<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="#ffffff" android:endColor="#ffffff" android:angle="270" android:centerY="0.75" android:centerColor="#ffffff"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="#f2150c" android:endColor="#f2150c" android:angle="270" android:centerY="0.75" android:centerColor="#f2150c"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <gradient android:startColor="#f2150c" android:endColor="#f2150c" android:angle="270" android:centerY="0.75" android:centerColor="#f2150c"/>
            </shape>
        </clip>
    </item>
</layer-list>
