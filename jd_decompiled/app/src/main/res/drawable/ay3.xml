<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="1px" android:color="#fa2c19"/>
            <solid android:color="#fa200c"/>
            <padding android:left="12dp" android:top="10dp" android:right="5dp" android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#f7f7f7"/>
            <padding android:left="12dp" android:top="12dp" android:right="5dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>
