<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/n9"/>
            <gradient android:startColor="#f2140c" android:endColor="#f24d0c" android:angle="0" android:centerColor="#f2270c"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/n9"/>
            <gradient android:startColor="#f2140c" android:endColor="#f24d0c" android:angle="0" android:centerColor="#f2270c"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/n9"/>
            <solid android:color="@color/kw"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/n9"/>
            <gradient android:startColor="#f2140c" android:endColor="#f24d0c" android:angle="0" android:centerColor="#f2270c"/>
        </shape>
    </item>
</selector>
