<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/ckf" android:background="@drawable/as4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ProgressBar android:layout_gravity="center_vertical" android:layout_width="7dp" android:layout_height="7dp" android:layout_marginRight="4.5dp" android:indeterminateOnly="true" android:indeterminateDrawable="@drawable/at3" android:indeterminateBehavior="repeat" android:layout_marginEnd="4.5dp"/>
            <TextView android:textSize="8sp" android:textColor="#ffffff" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="加载中"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/chm" android:background="@drawable/as4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="8sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="加载失败，\10请刷新重试" android:textAlignment="center"/>
            <TextView android:textSize="8sp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/cki" android:background="@drawable/alk" android:layout_width="43dp" android:layout_height="18dp" android:layout_marginTop="12dp" android:text="刷新" android:textAlignment="center"/>
        </LinearLayout>
    </FrameLayout>
    <ImageView android:id="@+id/chr" android:layout_width="16dp" android:layout_height="16dp" android:layout_margin="6dp" android:src="@drawable/c4d" android:layout_alignParentRight="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/as5" android:layout_width="43dp" android:layout_height="13dp" android:layout_margin="6dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/cht" android:background="@drawable/as2" android:layout_width="7dp" android:layout_height="7dp" android:layout_marginLeft="4dp"/>
        <TextView android:textSize="8sp" android:textColor="@android:color/white" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="直播中"/>
    </LinearLayout>
    <ImageView android:id="@+id/chu" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="6dp" android:src="@drawable/c4f" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
