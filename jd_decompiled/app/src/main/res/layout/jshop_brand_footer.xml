<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/j3" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/xlistview_footer_content" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/jshop_footer_content" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textColor="#9fa0a0" android:gravity="center" android:id="@+id/jshop_brand_footer_tv" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginBottom="15dp" android:text="@string/jshop_brand_footer_flip" android:singleLine="true" android:drawableLeft="@drawable/jshop_arrow_bottom" android:drawablePadding="5dp" android:layout_centerInParent="true"/>
            <View android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_toLeftOf="@+id/jshop_brand_footer_tv" android:layout_centerVertical="true" style="@style/tz"/>
            <View android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_toRightOf="@+id/jshop_brand_footer_tv" android:layout_centerVertical="true" style="@style/tz"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/jshop_progress_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_below="@+id/jshop_footer_content" android:layout_centerHorizontal="true">
            <com.jingdong.common.ui.JDProgressBar android:gravity="center" style="@style/m4"/>
            <TextView android:textColor="@color/e0" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="加载中..."/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
