<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:id="@+id/message_item" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp">
        <com.jingdong.common.messagecenter.view.NoTitleMessageDoorView android:id="@+id/po" android:layout_width="30dp" android:layout_height="wrap_content"/>
        <TextView android:textSize="15dp" android:textColor="#2e2d2d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="消息"/>
    </LinearLayout>
    <View android:background="#f0f0f0" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/follow_item" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp">
        <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/discovery_follow_normal_icon"/>
        <TextView android:textSize="15dp" android:textColor="#2e2d2d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="我的关注"/>
    </LinearLayout>
</LinearLayout>
