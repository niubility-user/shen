<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/coupon_layout" android:saveEnabled="false" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textColor="@color/lx" android:ellipsize="end" android:gravity="center" android:id="@+id/quota" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="满1000减10" android:maxLines="1"/>
            <View android:layout_width="match_parent" android:layout_height="1dp"/>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="#ccffffff" android:ellipsize="end" android:gravity="center" android:id="@+id/exchange_score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="100积分兑换" android:singleLine="true"/>
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="right" android:id="@+id/exchange_mark" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</FrameLayout>
