<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:orientation="vertical" android:background="@drawable/jshop_sign_bg" android:layout_width="match_parent" android:layout_height="320dp">
    <ImageView android:layout_gravity="center" android:id="@+id/jshop_sign_circle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/jshop_sign_circle_light"/>
    <ImageView android:layout_gravity="center" android:id="@+id/jshop_sign_bg_base" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/jshop_sign_base"/>
    <com.jingdong.common.sample.jshop.ui.JDSignCircleProgressView android:layout_gravity="center" android:id="@+id/jshop_sign_circleprogressbar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView android:layout_gravity="center" android:id="@+id/jshop_sign_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/jshop_sign_butn_text"/>
    <RelativeLayout android:layout_gravity="top|center_horizontal" android:id="@+id/jshop_sign_ok_view" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="95dp">
        <FrameLayout android:id="@+id/jshop_sign_ok_indicator_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/jshop_sign_ok_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:src="@drawable/jshop_sign_ok"/>
            <ImageView android:id="@+id/jshop_sign_ok_indicator_mask" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:src="@drawable/mask"/>
        </FrameLayout>
        <RelativeLayout android:id="@+id/jshop_sign_ok_text_view" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/jshop_sign_ok_indicator_view" android:layout_centerHorizontal="true">
            <TextView android:textSize="35dp" android:textStyle="bold" android:textColor="#252525" android:gravity="center" android:id="@+id/jshop_sign_ok_days" android:visibility="invisible" android:layout_width="40dp" android:layout_height="wrap_content" android:layout_marginLeft="1.5dp" android:layout_marginRight="1.5dp" android:text="5" android:shadowColor="#40000000" android:shadowDy="5" android:shadowRadius="2" android:layout_toRightOf="@+id/jshop_sign_ok_text1"/>
            <TextView android:textSize="13dp" android:typeface="monospace" android:textColor="#252525" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="天" android:layout_toRightOf="@+id/jshop_sign_ok_days" android:layout_alignBottom="@+id/jshop_sign_ok_text1"/>
            <TextView android:textSize="13dp" android:typeface="monospace" android:textColor="#252525" android:id="@+id/jshop_sign_ok_text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="已连签"/>
        </RelativeLayout>
        <ImageView android:id="@+id/jshop_sign_split_line" android:background="@drawable/jshop_sign_line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/jshop_sign_ok_text_view" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="16dp" android:typeface="monospace" android:textColor="#666666" android:id="@+id/jshop_sign_ok_text" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="连签60天更多奖励" android:layout_below="@+id/jshop_sign_split_line" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="top|center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/jshop_sign_present" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="33dp" android:src="@drawable/jshop_sign_start_point"/>
    </RelativeLayout>
</FrameLayout>
