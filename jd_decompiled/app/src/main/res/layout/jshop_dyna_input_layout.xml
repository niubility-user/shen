<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/lx" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View style="@style/tz"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/comment_type1_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="45dp">
            <TextView android:textSize="13dp" android:gravity="center" android:id="@+id/input_txt" android:background="#efefef" android:paddingLeft="12dp" android:layout_width="0dp" android:layout_height="33dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:hint="添加你的评论..." android:layout_weight="1"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="167dp" android:layout_height="match_parent">
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/to_comment_view" android:layout_width="55dp" android:layout_height="match_parent">
                    <com.facebook.drawee.view.SimpleDraweeView android:background="@drawable/jshop_dy_comment_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="11dp" android:textColor="@color/jshop_dynamic_comment_color" android:gravity="center" android:id="@+id/comment_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/comment_zan" android:clickable="false" android:layout_width="58dp" android:layout_height="match_parent" android:layout_marginLeft="7dp">
                    <com.facebook.drawee.view.SimpleDraweeView android:background="@drawable/jshop_dy_laud_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="11dp" android:textColor="@color/jshop_dynamic_comment_color" android:gravity="center" android:id="@+id/zan_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/comment_share" android:layout_width="40dp" android:layout_height="match_parent" android:layout_marginLeft="10dp">
                    <com.facebook.drawee.view.SimpleDraweeView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/jshop_dynamic_share"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/comment_type2_layout" android:background="#eeeeee" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textSize="13dp" android:gravity="center" android:id="@+id/input_edit" android:background="@color/lx" android:paddingLeft="8dp" android:scrollbars="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:minHeight="35dp" android:hint="评论..." android:maxLines="4" android:maxLength="140" android:layout_weight="1"/>
            <LinearLayout android:gravity="bottom|center_horizontal" android:layout_gravity="center" android:orientation="horizontal" android:paddingBottom="6dp" android:layout_width="100dp" android:layout_height="match_parent">
                <TextView android:textSize="15dp" android:textColor="@color/lx" android:gravity="center" android:id="@+id/comment_btn" android:background="@drawable/jshop_comment_btn_selector" android:layout_width="80dp" android:layout_height="34dp" android:text="发表"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/comment_type3_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="45dp">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/no_comment_layout" android:clickable="false" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <com.facebook.drawee.view.SimpleDraweeView android:background="@drawable/jshop_dy_comment_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="11dp" android:textColor="@color/jshop_dynamic_comment_color" android:gravity="center_vertical" android:id="@+id/nocomment_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <View android:background="#d8d8d8" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/jshop_dy_share" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <com.facebook.drawee.view.SimpleDraweeView android:background="@drawable/jshop_dynamic_share" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
