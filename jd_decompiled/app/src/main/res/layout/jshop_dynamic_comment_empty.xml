<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textColor="#b9b9b9" android:gravity="center" android:id="@+id/top_comment_num" android:background="#f7f7f7" android:paddingLeft="27dp" android:layout_width="match_parent" android:layout_height="50dp" android:text="评论0"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/notice_container" android:background="#fffcf2" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="8dp" android:paddingBottom="11dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:background="@drawable/jshop_notice_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp"/>
        <TextView android:textSize="12dp" android:textColor="#ff9054" android:id="@+id/notice_content" android:layout_width="0dp" android:layout_height="wrap_content" android:text="" android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/empty_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ImageView android:id="@+id/empty_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="42dp" android:src="@drawable/jshop_comment_empty" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="11dp" android:textColor="#b9b9b9" android:id="@+id/notice_content_default" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="还没有人评论哟，快来抢沙发~" android:layout_below="@+id/empty_icon" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
