        <ImageView android:id="@+id/ato" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/azd" android:scaleType="center" android:layout_centerVertical="true"/>
