<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f6f6f6" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_more_activity_title" android:background="@drawable/tm" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textSize="20sp" android:gravity="center" android:id="@+id/more_activity_title" android:background="@color/lx" android:layout_width="wrap_content" android:layout_height="30dp" android:text="设置" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/addtional_item_arrow0" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="5dp" android:src="@drawable/a3s" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/tv_finish" android:background="@color/lx" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginRight="10dp" android:text="完成" android:layout_alignRight="@+id/more_activity_title" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_setting1" android:background="@drawable/tm" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="10dp">
        <TextView android:textSize="15sp" android:textColor="#252525" android:id="@+id/tv_setting1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/addtional_item_arrow1" android:layout_width="wrap_content" android:layout_height="13dp" android:layout_marginRight="10dp" android:src="@drawable/ahe" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/additional_empty1" android:background="#bcbdbf" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <RelativeLayout android:id="@+id/rl_setting2" android:background="@drawable/tm" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="15sp" android:textColor="#252525" android:id="@+id/tv_setting2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/addtional_item_arrow2" android:layout_width="wrap_content" android:layout_height="13dp" android:layout_marginRight="10dp" android:src="@drawable/ahe" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/additional_empty3" android:background="#bcbdbf" android:layout_width="match_parent" android:layout_height="0.5dp"/>
