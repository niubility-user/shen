<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/fi"/>
    <RelativeLayout android:id="@+id/jshop_dynamic_normal_view" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/jshop_dynamic_detail_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/input_view_container"/>
        <com.jingdong.common.sample.jshop.ui.JshopDyCommentView android:id="@+id/jshop_comment_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/input_view_container"/>
        <ScrollView android:id="@+id/input_view_container" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <com.jingdong.common.sample.jshop.ui.JshopCommentInputView android:orientation="horizontal" android:id="@+id/jshop_input_view" android:layout_width="match_parent" android:layout_height="40dp" android:layout_alignParentBottom="true"/>
        </ScrollView>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/jshop_error_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
