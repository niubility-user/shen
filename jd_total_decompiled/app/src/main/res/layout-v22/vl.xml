        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/bxq" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/bxo">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
